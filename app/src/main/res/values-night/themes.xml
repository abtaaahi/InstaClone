<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InstagramClone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>



    </style>
    <style name="EnabledButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">#0096FD</item>
    </style>
    <style name="DisabledButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">#655B5B</item>
    </style>
    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background color -->
        <item name="android:background">#262626</item>
        <!-- Text color -->
        <item name="android:textColor">#A29B9B</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">#A29B9B</item>
        <!-- Search icon color -->
        <item name="android:iconifiedByDefault">false</item>
        <!-- Close button color -->
        <!-- Search icon color -->
        <item name="android:searchIcon">@drawable/searchviewicon</item>
    </style>

</resources>